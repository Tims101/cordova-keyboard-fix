<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.keyboard-fix" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Keyboard fix</name>
  <description>Example of an application with fixed keyboard</description>
  <author href="https://github.com/vsuharnikov">Vyatcheslav Suharnikov</author>

  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" version="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <preference name="Orientation" value="portrait" />
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="StatusBarOverlaysWebView" value="false"/>
  <preference name="StatusBarBackgroundColor" value="#000000"/>
  <preference name="StatusBarStyle" value="lightcontent"/>
  <preference name="Fullscreen" value="false"/>
  <preference name="KeyboardShrinksView" value="false" />
  <preference name="EnableViewportScale" value="false" />
  <preference name="HideKeyboardFormAccessoryBar" value="true"/>

  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
